@model Candidate

<div class="display-6">
    Apply
</div>

<form method="post" asp-action="Apply">
    <div class="form-group my-2">
        <label asp-for="Email">E-Mail</label>
        <input asp-asp-for="Email" class="form-control">
    </div>
    <div class="form-group my-2">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control">
    </div>
    <div class="form-group my-2">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control">
    </div>
    <div class="form-group my-2">
        <label>Age</label>
        <select name="Age" class="form-control">
            <option value="18">18</option>
            <option value="18">19</option>
            <option value="18">20</option>
            <option value="18">21</option>
            <option value="18">22</option>
            <option value="18">23</option>
        </select>
    </div>
    <fieldset>
        <legend>Select One Course</legend>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.NET Core MVC" />
            <label for="mvc">ASP.NET Core MVC</label>
        </p>
        <p>
            <input id="api" type="radio" asp-for="SelectedCourse" value="ASP.NET Core WEB API" />
            <label for="api">ASP.NET Core WEB API</label>
        </p>
        <p>
            <input id="ang" type="radio" asp-for="SelectedCourse" value="Angular" />
            <label for="ang">Angular</label>
        </p>
    </fieldset>
    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>
    </div>
</form>